<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.emmaguy.cleanstatusbar">

       <PreferenceCategory
           android:title="@string/general">
        <PreferenceScreen
            android:key="toggle_on_off"
            android:title="@string/stop_clean_status_bar" />

           <ListPreference
               android:key="api_level"
               android:title="@string/api_level"
               android:entries="@array/api_level_entries"
               android:entryValues="@array/api_level_entry_values"
               android:negativeButtonText="@null"
               android:positiveButtonText="@null" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/customisation">

        <com.emmaguy.cleanstatusbar.prefs.TimePreference
            android:key="clock_time"
            android:title="@string/clock_time" />

        <com.emmaguy.cleanstatusbar.prefs.ColourPreference
            android:key="background_colour"
            android:title="@string/status_bar_background_colour"
            android:defaultValue="@android:color/white"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            app:numColumns="4"
            app:itemLayout="@layout/grid_item_colour" />

    </PreferenceCategory>

</PreferenceScreen>
